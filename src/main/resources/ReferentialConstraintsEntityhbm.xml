<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.model.ReferentialConstraintsEntity" table="REFERENTIAL_CONSTRAINTS"
           schema="information_schema">
        <property name="constraintCatalog" column="CONSTRAINT_CATALOG"/>
        <property name="constraintSchema" column="CONSTRAINT_SCHEMA"/>
        <property name="constraintName" column="CONSTRAINT_NAME"/>
        <property name="uniqueConstraintCatalog" column="UNIQUE_CONSTRAINT_CATALOG"/>
        <property name="uniqueConstraintSchema" column="UNIQUE_CONSTRAINT_SCHEMA"/>
        <property name="uniqueConstraintName" column="UNIQUE_CONSTRAINT_NAME"/>
        <property name="matchOption" column="MATCH_OPTION"/>
        <property name="updateRule" column="UPDATE_RULE"/>
        <property name="deleteRule" column="DELETE_RULE"/>
        <property name="tableName" column="TABLE_NAME"/>
        <property name="referencedTableName" column="REFERENCED_TABLE_NAME"/>
    </class>
</hibernate-mapping>