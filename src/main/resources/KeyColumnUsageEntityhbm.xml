<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.model.KeyColumnUsageEntity" table="KEY_COLUMN_USAGE" schema="information_schema">
        <property name="constraintCatalog" column="CONSTRAINT_CATALOG"/>
        <property name="constraintSchema" column="CONSTRAINT_SCHEMA"/>
        <property name="constraintName" column="CONSTRAINT_NAME"/>
        <property name="tableCatalog" column="TABLE_CATALOG"/>
        <property name="tableSchema" column="TABLE_SCHEMA"/>
        <property name="tableName" column="TABLE_NAME"/>
        <property name="columnName" column="COLUMN_NAME"/>
        <property name="ordinalPosition" column="ORDINAL_POSITION"/>
        <property name="positionInUniqueConstraint" column="POSITION_IN_UNIQUE_CONSTRAINT"/>
        <property name="referencedTableSchema" column="REFERENCED_TABLE_SCHEMA"/>
        <property name="referencedTableName" column="REFERENCED_TABLE_NAME"/>
        <property name="referencedColumnName" column="REFERENCED_COLUMN_NAME"/>
    </class>
</hibernate-mapping>